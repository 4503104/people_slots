<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drum_root"
    android:layout_width="@dimen/slot_drum_width"
    android:layout_height="@dimen/slot_drum_height"
    android:layout_marginBottom="@dimen/slot_margin">

    <ListView
        android:id="@+id/drum_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/drum_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/drum_cover_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slot_drum_margin"
            android:background="#40808080" />

        <View
            android:id="@+id/drum_cover_middle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slot_item_height"
            android:background="#2000ff00" />

        <View
            android:id="@+id/drum_cover_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slot_drum_margin"
            android:background="#40808080" />
    </LinearLayout>

</FrameLayout>
