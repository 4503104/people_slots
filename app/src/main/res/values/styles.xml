<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SlotParent">
        <item name="android:layout_width">@dimen/slot_width</item>
        <item name="android:layout_height">@dimen/slot_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">#ffffff</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="SlotChild">
        <item name="android:layout_width">@dimen/slot_width</item>
        <item name="android:layout_height">@dimen/slot_item_height</item>
    </style>

</resources>
